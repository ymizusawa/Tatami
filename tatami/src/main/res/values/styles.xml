<resources>

    <!-- Base application theme. -->
    <style name="TatamiAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Button -->
        <item name="buttonEnableFalseBaseColor">@color/grey_500</item>
        <item name="buttonPressBaseColor">@color/green_500</item>
        <item name="buttonFocusBaseColor">@color/green_500</item>
        <item name="buttonBaseColor">@color/green_300</item>
        <!--item name="android:buttonStyle">@style/TatamiButtonStyle</item-->
    </style>

    <style name="TatamiAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="TatamiAppToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Toolbarの色 -->
        <item name="android:textColorPrimary">@color/green_50</item>
        <item name="android:textColorSecondary">@color/green_50</item>
    </style>

    <style name="TatamiAppPopupTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <!-- Button Style -->
    <style name="TatamiButtonStyle" parent="android:Widget.Button">
        <item name="android:background">@drawable/tatami_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <declare-styleable name="buttonBackground">
        <attr name="buttonEnableFalseBaseColor" format="color" />
        <attr name="buttonPressBaseColor" format="color" />
        <attr name="buttonFocusBaseColor" format="color" />
        <attr name="buttonBaseColor" format="color" />
    </declare-styleable>

</resources>
